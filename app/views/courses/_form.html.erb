<%= form_for(@course) do |f| %>
  
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>

  <p>
    <%= f.label :category %>
    <%= f.text_field :category %>
  </p>

  <p>
    <%= f.fields_for :enrollments do |enrollment_form| %>
      <%= enrollment_form.label :rating %>
      <%= enrollment_form.number_field :rating %>
    <% end %>
  </p> 
  <br/>>
  <%= f.submit %>
      
  <% end %>